@inherits Umbraco.Web.Mvc.UmbracoViewPage<BlockListItem>
@using Umbraco.Core.Models.Blocks;
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    var searchQuery = Request.QueryString["q"];
}
                <div class="col-xs-12 col-sm-8">
                    <input type="text" class="form-control col-xs-6" placeholder="Search..." name="q" value="@searchQuery" />
                </div>
                <div class="col-xs-12 col-sm-4">
                    <button class="btn btn-primary">Search <i class="fa fa-search"></i></button>
                </div>
    
    
    @{
        var searchQuery = Request.QueryString["query"];
    
        if (!string.IsNullOrEmpty(searchQuery))    
        {
            <div>
                <p>Your search results for <strong>@searchQuery</strong></p>
                <ul>
                    @foreach (var result in Umbraco.ContentQuery.Search(searchQuery))
                    {
                        <li>
                             <a href="@result.Content.Url">@result.Content.Name</a>
                        </li>
                    }
                </ul>
            </div>
        }
    }
</div>